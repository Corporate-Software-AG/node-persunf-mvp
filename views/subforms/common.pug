div.mb-3
    input#form_id.form-control(type='hidden', name='form_id', value=id, readonly)

div.mb-3
    label.form-label(for='mzrname') #{languageData.mzrlocations.name}:
    input#mzrname.form-control(type='text' name='mzrname' value=languageData.mzrlocations.items.find( ({id}) => id === deviceLocation).name, disabled)
    input#mzr.form-control(type='text' name='mzr' value=deviceLocation, hidden)
    
div.mb-3
    label.form-label(for='date') #{languageData.dateofincident.name}:
    input#date.form-control(type='date', name='date', required)
div.mb-3
    label.form-label(for='time') #{languageData.timeofincident.name}:
    input#time.form-control(type='time', name='time', required)
div.mb-3
    label.form-label(for='birthyear') #{languageData.birthyear.name}:
    select#birthyear.form-select(name='birthyear', required)
        option(value='', disabled, selected) #{languageData.labels.select}
        - var n = 2022;
        while n >= 1900
            option(value=n) #{n}
            - n--; 

div.mb-3
    label.form-label(for='trooplocations') #{languageData.trooplocations.name}:
    select#trooplocations.form-select(name='trooplocations', required)
        option(value='', disabled, selected) #{languageData.labels.select}
        each val in languageData.trooplocations.items
            option(value=val.id) #{val.name} 
div.mb-3
    label.form-label(for='servicetype') #{languageData.servicetype.name}:
    select#servicetype.form-select(name='servicetype', required)
        option(value='', disabled, selected) #{languageData.labels.select}
        each val in languageData.servicetype.items
