div.mb-3
    label.form-label(for='branches_of_service_and_special_badges') #{languageData.branches_of_service_and_special_badges.name}:
    select#branches_of_service_and_special_badges.form-select(name='branches_of_service_and_special_badges', required)
        option(value='', disabled, selected) #{languageData.labels.select}
