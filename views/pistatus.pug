html 
    head
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3', crossorigin='anonymous')
        title= title
        meta(name='viewport', content='width=device-width, initial-scale=1')

    body
        header 
            .container.p-3
                p.logo
                    img(src="https://mvppersunf.blob.core.windows.net/images/Logo-Schweizerische-Eidgenossenschaft.png")
        section
            .container
                h1= "IoT Devices Status Dashboard"
                hr
                .row 
                    .col-sm
                        p(class= "first")= "Device ID"
                    .col-sm
                        p(class= "first")= "Location"
                    .col-sm
                        p(class= "first")= "IoT Hub Connectivity"
                each e in piStatusData
                    .row 
                        .col-sm
                            p= e.id
                        .col-sm 
                            p= e.nummer
                        .col-sm 
                            p= e.location
                        .col-sm(class= e.status )
                            p= e.status
                    hr

        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js',integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p', crossorigin='anonymous') 
style. 
    .logo {
        text-align: right;
    }
    img {
        max-width: 100%;
    }
    .container {
        text-align: center;
    }
    p {
        margin: 0;
        padding: 0;
    }
    .first {
        font-weight: 800;
    }
    .online {
        font-weight: 400;
        color: green;
    }
    .offline {
        font-weight: 600;
        color: red;
    }
    
