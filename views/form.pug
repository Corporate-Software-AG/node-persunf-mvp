html 
    head
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3', crossorigin='anonymous')
        title= title
    body
        header 
            .container.p-3
                p.logo
                    img(src="https://mvppersunf.blob.core.windows.net/images/Logo-Schweizerische-Eidgenossenschaft.png")
        section 
            .container
                h1= "Form"
                form(method='POST' action='/submit_form')
                    div.mb-3
                        label.form-label(for='form_id') ID:
                        input#form_id.form-control(type='text', name='form_id', value=id, disabled)
                    div.mb-3
                        label.form-label(for='name') Name:
                        input#name.form-control(type='text', placeholder='name' name='name')
                    div.mb-3
                        label.form-label(for='desc') Text:
                        input#desc.form-control(type='text', placeholder='description' name='desc')
                    div.mb-3
                        label.form-label(for='select') MZR:
                        select#select.form-select(name='select')
                            option(value=mzr1) MZR 01
                            option(value=mzr2) MZR 02
                            option(value=mzr3) MZR 03
                            option(value=mzr4) MZR 04
                    button.btn.btn-danger(type="submit", value="OK") Submit

        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js',integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p', crossorigin='anonymous') 
style. 
    .logo {
        text-align: right;
    }