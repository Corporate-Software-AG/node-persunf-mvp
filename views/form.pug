html 
    head
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3', crossorigin='anonymous')
        title= title
        meta(name='viewport', content='width=device-width, initial-scale=1')

    body
        header 
            .container.p-3
                p.logo
                    img(src="https://mvppersunf.blob.core.windows.net/images/Logo-Schweizerische-Eidgenossenschaft.png")
        section 
            .container
                h1= "Form"
                p= languageData.language
                form(method='POST' action='/submit_form')
                    div.mb-3
                        label.form-label(for='form_id') ID:
                        input#form_id.form-control(type='text', name='form_id', value=id, disabled)
                    div.mb-3
                        label.form-label(for='date') #{languageData.dateofincident.name} :
                        input#date.form-control(type='date', name='date')
                    div.mb-3
                        label.form-label(for='time') #{languageData.timeofincident.name} :
                        input#time.form-control(type='time', name='time')
                    div.mb-3
                        label.form-label(for='mzr') #{languageData.mzrlocations.name} 
                        select#mzr.form-select(name='mzr')
                            each val in languageData.mzrlocations.items
                                option(value=val.id) #{val.name} 
                    div.mb-3
                        label.form-label(for='birthyear') #{languageData.birthyear.name}
                        select#birthyear.form-select(name='birthyear')
                            - var n = 2022;
                            while n >= 1900
                                option(value=n) #{n}
                                - n--; 
                    div.mb-3
                        label.form-label(for='category') #{languageData.categories.name}:
                        select#category.form-select(name='category', onchange='categorySelected(this)')
                            option(value='', disabled, selected) #{languageData.labels.select}
                            each val in languageData.categories.items
                                option(value=val.id) #{val.name}
                    div.subform.subform-accident
                        include subforms/accident.pug
                    div.subform.subform-illnes
                        include subforms/illness.pug                    
                    div.subform.subform-mental
                        include subforms/mentally.pug

                    button.btn.btn-danger(type="submit", value="OK") #{languageData.labels.submit}

        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js',integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p', crossorigin='anonymous') 
style. 
    .logo {
        text-align: right;
    }
    img {
        max-width: 100%;
    }
    .subform,
    .subform-unfall {
        display: none;
    }
script.
    (function() {
        document.getElementById('date').valueAsDate = new Date();
    })();

    function categorySelected(selectObject) {
        document.querySelectorAll('.subform').forEach((element) => element.style.display = 'none');
        document.querySelectorAll('.subform-' + selectObject.value).forEach((element) => element.style.display = 'block');
    }